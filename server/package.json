{
  "name": "nasa-project-api",
  "version": "1.0.0",
  "description": "NASA Mission Control API",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test-watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "watch": "npm run ts-build && nodemon build/src/server.js",
    "start": "npm run ts-build && node build/src/server.js",
    "cluster": "npm run ts-build && pm2 start build/src/server.js -i max",
    "ts-clean": "rm -r ./build || true",
    "ts-copy-assets": "cp -r ./data ./build & cp -r ./public ./build 2>/dev/null || :",
    "ts-build": "npm run ts-clean && tsc && npm run ts-copy-assets"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parse": "^5.3.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5"
  }
}
